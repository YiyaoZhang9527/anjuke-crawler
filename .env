# 安居客爬虫配置文件

# 浏览器配置
BROWSER_HEADLESS=false          # 是否无头模式运行 (true/false)
BROWSER_TIMEOUT=30000           # 页面加载超时时间(毫秒)

BASE_URL=https://hf.zu.anjuke.com/fangyuan

# 爬取配置 (测试模式)
MAX_HOUSES_PER_PAGE=60           # 每个列表页最多爬取房源数 (测试模式：3个)
MAX_TOTAL_HOUSES=50000             # 总计最多爬取房源数 (测试模式：10个)
MAX_PAGES=100                     # 每个区域最多爬取页数
CRAWL_DELAY=2                   # 爬取间隔延时(秒)
PAGE_LOAD_DELAY=2               # 页面加载后延时(秒)

# CSV输出配置
CSV_FILENAME=anjuke_houses.csv  # CSV输出文件名
CSV_ENCODING=utf-8              # CSV文件编码
APPEND_MODE=false               # 是否追加模式 (true/false)

# 日志配置
LOG_LEVEL=INFO                  # 日志级别 (DEBUG/INFO/WARNING/ERROR)
SHOW_PROGRESS=true              # 是否显示进度信息
LOG_FILENAME=anjuke_crawler.log  # 日志文件名

# 反爬配置
ENABLE_AUTO_VERIFICATION=true   # 是否启用自动验证码处理
MAX_RETRY_TIMES=3               # 最大重试次数
RETRY_DELAY=5                   # 重试延时(秒)
ENABLE_STEALTH_MODE=true        # 是否启用隐身模式
PROXY_LIST=127.0.0.1:7897       # 代理列表 (逗号分隔，留空则不使用)

# 目标区域配置 (用逗号分隔)
TARGET_REGIONS=shushanqu  # 测试模式：只测试蜀山区

# 数据验证配置
VALIDATE_DATA=true              # 是否验证数据完整性
MIN_PRICE=100                   # 最低价格
MAX_PRICE=50000                 # 最高价格
MIN_AREA=1                      # 最小面积
MAX_AREA=1000                   # 最大面积

# 新增功能配置
ENABLE_DUPLICATE_CHECK=true     # 是否启用房源去重检查
DUPLICATE_CSV_FILE=             # 去重参考CSV文件（留空则使用主CSV文件）
ENABLE_VERIFICATION_LOG=true    # 是否启用验证码专用日志
VERIFICATION_LOG_FILE=verification_log.csv  # 验证码日志文件名